<div class="container mt-5">
  <%= form_with model: @user, url: user_registration_path do |f| %>
  <div class="row justify-content-center">
    <div class="col-lg-3">
      <%= render "layouts/sideber" %>
    </div>
    <div class="col-lg-8 mt-5 offset-lg-1">
      <%= render "layouts/flash_message" %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="card text-center">
        <div class="card-header bg-dark text-secondary">
          新規登録
        </div>
        <div class="card-body bg-light text-secondary">
          <div class="form-group">
            <div class="field">
              <%= f.label :名前 %>(2文字以上20文字以内)<br>
              <%= f.text_field :name, autofocus: true, class: "form-control" %>
            </div>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            <div class="field">
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 桁以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>
            <div class="field">
              <%= f.label :もう一度入力してください %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
            <div class="actions mt-3">
              <%= f.submit "登録", class: "btn btn-primary" %>
            </div>
            <div class="link-field mt-3">
              <%= link_to "登録済みの方はこちら", new_user_session_path, class: "nav-link text-secondary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>