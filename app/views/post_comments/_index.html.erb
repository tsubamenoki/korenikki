<% post.post_comments.each do |comment| %>
  <div class="mb-2">
    <span class="mr-5"><%= comment.created_at.strftime('%Y/%m/%d') %></span><%= comment.comment %>
    <%= link_to post_post_comment_path(comment.post, comment), method: :delete, data: {confirm: "本当に削除しますか？"}, remote: true do %>
      <i class="fa-regular fa-trash-can"></i>
    <% end %>
  </div>
<% end %>
