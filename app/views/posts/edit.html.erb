<div class="container mt-5">
<%= form_with model: @post do |f| %>
  <div class="row justify-content-center">
    <div class="col-lg-3">
      <%= render "layouts/sideber", tag_lists: @tag_lists %>
    </div>
    <div class="col-lg-8 offset-lg-1">
    <%= render 'layouts/flash_message' %>
    <%= render 'layouts/error', obj: @post %>
      <h2 class="text-center text-secondary">投稿編集</h2>
      <div class="card">
        <div class="card-header bg-dark">
          <div class="form-group">
            <div class="date-field text-secondary">
              <%= f.label :日付 %>(必須)<br>
              <%= f.date_field :date, autofocus: true, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="card-body bg-light">
          <div class="form-group">
            <div class="field mb-3 text-secondary">
              <%= f.label :タイトル %>(必須)<br>
              <%= f.text_field :title, autofocus: true, placeholder: "20文字以内",  class: "form-control" %>
            </div>
            <div class="field mb-3 text-secondary">
              <%= f.label :画像 %><br>
              <%= f.file_field :post_images, multiple: true, autofocus: true %>
            </div>
            <div class="field mb-3 text-secondary">
              <%= f.label :本文 %>(必須)<br>
              <%= f.text_area :body, autofocus: true, placeholder: "500文字以内",  class: "form-control" %>
            </div>
            <div class="field mb-3 text-secondary">
              <%= f.label :タグ %>(,で区切ると複数タグ登録できます)<br>
              <%= f.text_field :tag_id, autofocus: true, value: @tags, class: "form-control" %>
            </div>
            <div class="text-center">
              <div class="btn mt-3">
                <%= f.submit "保存", class: "btn btn-primary" %>
                <%= link_to "削除", post_path(@post), class: "btn btn-danger", method: :delete, data: {confirm: "本当に削除しますか？"} %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>