<div class="container mt-5">
<%= render 'layouts/header' %>
<%= form_with model: @post do |f| %>
  <div class="row justify-content-center">
    <div class="col-lg-2">
      <%= render "layouts/sideber" %>
    </div>
    <div class="col-lg-7 offset-1">
    <%= render 'layouts/flash_message' %>
    <%= render 'layouts/error', obj: @post %>
      <h2 class="text-center">投稿編集</h2>
      <div class="card">
        <div class="card-header">
          <div class="form-group">
            <div class="date-field">
              <%= f.label :日付 %><br>
              <%= f.date_field :date, autofocus: true, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="card-body">
          <div class="form-group">
            <div class="field mb-3">
              <%= f.label :タイトル %><br>
              <%= f.text_field :title, autofocus: true, class: "form-control" %>
            </div>
            <div class="field mb-3">
              <%= f.label :画像 %><br>
              <%= f.file_field :post_images, multiple: true, autofocus: true %>
            </div>
            <div class="field mb-3">
              <%= f.label :本文 %><br>
              <%= f.text_area :body, autofocus: true, class: "form-control" %>
            </div>
            <div class="field mb-3">
              <%= f.label :タグ %>(,で区切ると複数タグ登録できます)<br>
              <%= f.text_field :tag_id, autofocus: true, value: @tags, class: "form-control" %>
            </div>
            <div class="text-center">
              <div class="btn mt-3">
                <%= f.submit "保存", class: "btn btn-primary" %>
                <%= link_to "削除", post_path(@post), class: "btn btn-danger", method: :delete %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>