<div class="container mt-5">
<%= render 'layouts/header' %>
  <div class="row justify-content-center">
    <div class="col-8">
      <% @posts.each do |post| %>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th><%= post.date %></th>
            <th><%= post.title %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% post.post_images.each do |post_image| %>
            <td><%= image_tag post_image, size: "100x100" %></td>
          <% end %>
            <td class="text-center"><%= post.body %></td>
            <td></td>
          </tr>
        </tbody>
      </table>
    <% end %>
    </div>
    <div class="col-2 offset-1">
      <%= render "layouts/sideber" %>
    </div>
  </div>
</div>