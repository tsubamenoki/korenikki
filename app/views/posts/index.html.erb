<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-3">
      <%= render "layouts/sideber", tag_lists: @tag_lists, posts: @posts %>
    </div>
  <% if @posts.present? %>
    <div class="col-lg-8 offset-lg-1 mt-5">
      <h2 class="text-center text-secondary">投稿一覧</h2>
      <%= render 'layouts/flash_message' %>
      <%= render 'ichiran', obj: @posts %>
      <div class="paginate justify-content-center">
          <%= paginate @posts %>
        </div>
    </div>
    <% else %>
    <div class="col-lg-8 offset-lg-1 mt-5">
      <%= render 'layouts/flash_message' %>
      <h2 class="text-center text-secondary">まだ投稿がありません</h2>
    </div>
    <% end %>
  </div>
</div>