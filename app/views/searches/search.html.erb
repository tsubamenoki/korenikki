<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-lg-3">
      <%= render "layouts/sideber", tag_lists: @tag_lists, posts: @posts %>
    </div>
    <div class="col-lg-8 mt-5 offset-lg-1">
      <% if @range == "日付" %>
      <h3 class="text-center text-secondary">"<%= @word %>"の検索結果(日付)</h3>
        <%= render "result" , obj: @date %>
      <% elsif @range == "タイトル" %>
      <h3 class="text-center text-secondary">"<%= @word %>"の検索結果(タイトル)</h3>
        <%= render "result" , obj: @title %>
      <% elsif @range == "本文" %>
      <h3 class="text-center text-secondary">"<%= @word %>"の検索結果(本文)</h3>
        <%= render "result" , obj: @body %>
      <% else %>
      <h3 class="text-center text-secondary">"<%= @word %>"の検索結果(タグ)</h3>
        <%= render "result" , obj: @tag %>
      <% end %>
    </div>
  </div>
</div>