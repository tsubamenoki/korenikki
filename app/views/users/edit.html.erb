<div class="container mt-5">
<%= render "layouts/header" %>
<%= form_with model: @user, url: users_mypage_path, method: :patch do |f| %>
  <div class="row justify-content-center">
    <div class="col-8">
      <%= render 'layouts/error', obj: @user %>
      <div class="card text-center">
        <div class="card-body">
          <div class="form-group">
            <div class="field mb-3">
              <%= f.label :名前 %><br>
              <%= f.text_field :name, autofocus: true, class: "form-control" %>
            </div>
            <div class="field mb-3">
              <%= f.label :画像 %><br>
              <%= f.file_field :profile_image %>
            </div>
            <div class="field mb-3">
              <%= f.label :メールアドレス %><br>
              <%= f.text_field :email, autofocus: true, class: "form-control" %>
            </div>
            <div class="field mb-3">
              <%= f.submit "保存", class: "btn btn-primary" %>
              <%= link_to "退会する", users_mypage_confirm_path, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-2 offset-1">
      <%= render "layouts/sideber" %>
    </div>
  </div>
  <% end %>
</div>